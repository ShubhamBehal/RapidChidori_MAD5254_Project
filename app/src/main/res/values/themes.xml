<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RapidChidori_MAD5254_Project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryVariant">@color/primary2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary3</item>
        <item name="colorSecondaryVariant">@color/primary4</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="textInputStyle">
            @style/MyCustomTextInputStyle
        </item>
        <item name="editTextStyle">
            @style/MyCustomEditTextStyle
        </item>
    </style>

    <style name="MyCustomTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary3</item>
    </style>
</resources>